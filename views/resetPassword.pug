extends base

block content

    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset Password 
            form.form.form--resetPassword
                .form__group
                    label.form__label(for='email-resetPassword') Email address
                    input#email-resetPassword.form__input(type='email', placeholder='you@example.com', required)

                .form__group
                    button#resetPassword.btn.btn--green.btn--long(type='submit') Send Verification Code
            
                    a.form-link.form-link--login(href="/login") 
                        span Login.